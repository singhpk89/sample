<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="custom_left_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/control_height</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/control_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="custom_right_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/control_height</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/control_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="custom_textbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/control_height</item>
        <item name="android:background">@drawable/editbox_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/control_text_size</item>
        <item name="android:textColor">@color/editbox_textcolor</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="custom_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/control_height</item>
        <item name="android:background">@drawable/editbox_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/control_text_size</item>
        <item name="android:textColor">@color/editbox_textcolor</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@drawable/spinner_icon</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    
    <style name="custom_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">@dimen/control_label_text_size</item>
        <item name="android:textColor">@color/label_color</item>
    </style>

</resources>